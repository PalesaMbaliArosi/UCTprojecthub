@model UCTprojecthub.Models.Topic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        text-align : center;
        background: linear-gradient(90deg, rgba(68,58,241,1) 0%, rgba(94,94,228,1) 41%, rgba(122,131,233,1) 100%, rgba(13,189,255,1) 100%);
    }

    h1 {
        color: black;
        font-family: Verdana, Arial, helvetica, Geneva, sans-serif;
        font-size: 48px;
        text-align: center;
    }

    h2 {
        color: white;
        font-family: Verdana, Arial, helvetica, Geneva, sans-serif;
        font-size: 27px;
    }

    h3 {
        color: white;
        font-family: Verdana, Arial, helvetica, Geneva, sans-serif;
        font-size: 16px;
    }

    row {
        color: white;
        font-size: 14pt;
        text-align: center;
    }

</style>

<body>
    <h1>Details</h1>

    <div>
        <h4>Topic</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.isChosen)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.isChosen)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateUpdated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateUpdated)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Theme)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Theme.Description)
            </dd>
        </dl>
    </div>
    <div>
        @if (User.IsInRole("Mentor"))
        {
            <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
        }
        <a asp-action="Index">Back to List</a>
    </div>

</body>